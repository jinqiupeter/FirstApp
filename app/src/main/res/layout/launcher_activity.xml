<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/jia_xun_bao_bei_title"
        style="@style/title_in_activity"
        android:text="@string/jia_xun_bao_bei"/>
    <TextView
        android:layout_toRightOf="@+id/jia_xun_bao_bei_title"
        android:gravity="center_vertical|right"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/more"
        android:onClick="all_lost_children"/>
    <View style="@style/Divider"
        android:id="@+id/divider"
        android:layout_below="@+id/jia_xun_bao_bei_title"
        android:layout_alignParentRight="true"/>
    <ListView
        android:id="@+id/lost_children"
        android:layout_below="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
